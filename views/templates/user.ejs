<li class="py-2 px-4 bg-white rounded shadow-sm mb-2 flex justify-between items-center">
  <span><strong><%= user.username %></strong> &mdash; <%= user.email %> (<%= user.user_type %>)</span>
  <div>
    <% if (user.user_type === 'admin') { %>
      <a href="/demote/<%= user.email %>" class="text-sm text-red-600 hover:underline">Demote</a>
    <% } else { %>
      <a href="/promote/<%= user.email %>" class="text-sm text-green-600 hover:underline">Promote</a>
    <% } %>
  </div>
</li>

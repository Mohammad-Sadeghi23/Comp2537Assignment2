<%- include("templates/header") %>

<h2 class="text-xl font-semibold mb-4">Log In</h2>

<% if (error) { %>
  <div class="bg-red-100 text-red-700 p-3 mb-4 rounded"><%= error %></div>
<% } %>

<form action="/login" method="POST" class="space-y-4">
  <input type="email" name="email" placeholder="Email" required class="w-full px-4 py-2 border rounded">
  <input type="password" name="password" placeholder="Password" required class="w-full px-4 py-2 border rounded">
  <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Log In</button>
</form>

<p class="mt-4 text-sm">Don't have an account? <a href="/signup" class="text-indigo-600 hover:underline">Sign up</a></p>

<%- include("templates/footer") %>
